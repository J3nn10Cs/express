extends ./layout/index

block contains 
    main.container.mt-5
        h1.text-center.mt-5 #{page}
        blockquote.text-center Lee sobre nuestros clientes y sus experiencias
        include ./layout/block_testimonials

        .row 

            .col-md-12
                h2.d-block.w-100.text-center Agregar un terminal

                if(error)
                    each errores in error
                        .alert.col.alert-danger.text-center= errores.message

            .row.justify-content-center.col
                .col-md-8
                    form(action="/testimonialspage" method="POST")
                        .form-group
                            label(for="name") Name
                            input#name(type="text", placeholder="Your name", name="name",class="form-control", value=name)
                        .form-group 
                            label(for="email") Email 
                            input#email(type="email", name="email", placeholder="Your email", class="form-control", value= email) 
                        .form-group 
                            label(for="message") Message 
                            textarea#message(name="message",class="form-control",placeholder="Your message", rows=3)= message 

                        input.btn.btn-success.btn-block(type="submit")